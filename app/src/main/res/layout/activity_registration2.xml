<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Registration2">

    <View
        android:layout_width="wrap_content"
        android:layout_height="118dp"
        android:background="@drawable/background_gradient" />

    <View
        android:id="@+id/logosquare"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/back_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_back_button"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:id="@+id/logotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Healthary"
        android:textColor="@color/white"
        android:textSize="42dp"
        android:fontFamily="@font/open_sans_extrabold"
        android:layout_marginTop="26dp"/>

    <EditText
        android:id="@+id/email_et"
        style="@style/strokeEditTextStyle"
        android:layout_below="@+id/logosquare"
        android:layout_marginTop="25dp"
        android:textColor="@color/gray"
        android:hint="Адрес электронной почты"
        android:textColorHint="@color/gray"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/password_et"
        style="@style/strokeEditTextStyle"
        android:layout_below="@+id/email_et"
        android:layout_marginTop="12dp"
        android:textColor="@color/gray"
        android:hint="Пароль"
        android:textColorHint="@color/gray"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/name_et"
        style="@style/strokeEditTextStyle"
        android:layout_below="@+id/password_et"
        android:layout_marginTop="12dp"
        android:textColor="@color/gray"
        android:hint="Имя"
        android:textColorHint="@color/gray"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/age_et"
        style="@style/strokeEditTextStyle"
        android:layout_below="@+id/name_et"
        android:layout_marginTop="12dp"
        android:textColor="@color/gray"
        android:hint="Возраст"
        android:textColorHint="@color/gray"
        android:inputType="number"/>

    <EditText
        android:id="@+id/weight_et"
        style="@style/strokeEditTextStyle"
        android:layout_below="@+id/age_et"
        android:layout_marginTop="12dp"
        android:textColor="@color/gray"
        android:hint="Вес"
        android:textColorHint="@color/gray"
        android:inputType="number"/>

    <EditText
        android:id="@+id/height_et"
        style="@style/strokeEditTextStyle"
        android:layout_below="@+id/weight_et"
        android:layout_marginTop="12dp"
        android:textColor="@color/gray"
        android:hint="Рост"
        android:textColorHint="@color/gray"
        android:inputType="number"/>

    <Spinner
        android:id="@+id/gender_spinner"
        style="@style/strokeEditTextStyle"
        android:layout_below="@+id/height_et"
        android:layout_marginTop="12dp"
        android:textColor="@color/gray"
        android:hint="Пол"
        android:textColorHint="@color/gray" />



</RelativeLayout>