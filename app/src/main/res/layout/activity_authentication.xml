<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentication"
    android:background="@color/white">

    <View
        android:layout_width="wrap_content"
        android:layout_height="560dp"
        android:background="@drawable/background_gradient"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/ic_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <View
        android:id="@+id/logosquare"
        android:layout_width="274dp"
        android:layout_height="274dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/logotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Healthary"
        android:textColor="@color/white"
        android:textSize="42dp"
        android:fontFamily="@font/open_sans_extrabold"
        android:layout_marginTop="16dp"
        android:layout_below="@id/logo"/>

    
    <EditText
        android:id="@+id/email_et"
        style="@style/solidEditTextStyle"
        android:layout_below="@+id/logosquare"
        android:layout_marginTop="25dp"
        android:textColor="@color/gray"
        android:drawableLeft="@drawable/ic_emailimg"
        android:hint="Адрес электронной почты"
        android:textColorHint="@color/gray"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/password_et"
        style="@style/solidEditTextStyle"
        android:layout_below="@+id/email_et"
        android:layout_marginTop="20dp"
        android:textColor="@color/gray"
        android:drawableLeft="@drawable/ic_padlock"
        android:hint="Пароль"
        android:textColorHint="@color/gray"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/sign_in_btn"
        style="@style/buttonStyle"
        android:layout_marginTop="20dp"
        android:layout_below="@id/password_et"
        android:text="Вход"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Создать аккаунт"
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:layout_below="@id/sign_in_btn"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/open_sans_regular"/>
</RelativeLayout>